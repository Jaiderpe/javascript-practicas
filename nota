function agregarcontactos(contactos) {
    try{
        contactos.push(contactos);
        console.log("se se agrego", contactos);
    } catch (e) {
        console.error("no se agregado");
    }
}
function crearobjetocontactos(nombrec, telefonoc, Emailc){
    return{
        nombre: nombrec,
        telefono: telefonoc,
        Email: Emailc
    };
}

