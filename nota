//codigo para cambiar el valor de una propiedad de un odjeto con un formulario 
let odjeto ={
    persona1: "juan",
    persona2: "diego",
    persona3:"david"
};
// odjeto.persona2;  "facundo";

const  miForm = document.querySelector("#miForm")
let formData = new  FormData();
formData.get("persona2");
miForm.addEventListener("submit" ,(Event) => {
    Event.preventDefault();

    const datosFormulario = new FormData(miForm);
    const nombreNuevo = datosFormulario.get ("nombre");

    odjeto.persona2 = nombreNuevo;
    console.log(odjeto);
});

// el name dentro de la etiqueta imput es el nombre de la llave queremos 
